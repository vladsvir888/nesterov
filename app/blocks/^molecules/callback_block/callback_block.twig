{% if callback_block %}
  <div class="callback-block {{ callback_block.class }}">
    {% if callback_block.phone_btn %}
      <div class="callback-block__item">
        {% include "../../@atoms/button/button.twig" with {
          button: callback_block.phone_btn
        } %}
      </div>
    {% endif %}

    {% if callback_block.call_btn %}
      <div class="callback-block__item">
        {% include "../../@atoms/button/button.twig" with {
          button: callback_block.call_btn
        } %}
      </div>
    {% endif %}
  </div>
{% endif %}
